-------------------
https://leetcode.com/problems/regions-cut-by-slashes/description/
SCALLED UP GRID SOLUTION:

class Solution {

    int dx[4] = { 1 , -1 , 0 , 0 };
    int dy[4] = { 0 , 0 , 1 , -1 };

    vector<vector<int>>vis ;

    void dfs( int i , int j , vector<vector<int>>&A )
    {
        int N = A.size();
        if( i < 0 || i >= N || j < 0 || j >= N || A[i][j] == 1 || vis[i][j] == 1 )
        return ;

        vis[i][j] = 1 ;

        for( int p = 0 ; p < 4 ; p++ )
        {
            int a = i + dx[p];
            int b = j + dy[p];

            dfs( a , b , A );
        }
    }

    int solve( vector<vector<int>>&A )
    {
        int N = A.size();
        int cnt = 0 ;
        vis.assign( N , vector<int>(N,0));
        for( int i = 0 ; i < N ; i++ )
        for( int j = 0 ; j < N ; j++ )
        {
            if( A[i][j] == 0 && vis[i][j] == 0 )
            {
                cnt++;
                dfs( i , j , A );
            }
        }

        return cnt ;
    }

public:
    int regionsBySlashes(vector<string>& A ) {
        int N = A.size();
        int M = 3*N ;
        vector<vector<int>>B( M , vector<int>(M,0));

        for( int i = 0 ; i < N ; i++ )
        for( int j = 0 ; j < N ; j++ )
        {
            int a = 3*i ;
            int b = 3*j ;

            if( A[i][j] == '/' )
            {
                B[a][b+2] = 1 ;
                B[a+1][b+1] = 1 ; 
                B[a+2][b] = 1 ;
            }
            else if( A[i][j] == '\\')
            {
                B[a][b] = 1 ;
                B[a+1][b+1] = 1 ;
                B[a+2][b+2] = 1 ;
            }
        }

        return solve(B);
    }
};

