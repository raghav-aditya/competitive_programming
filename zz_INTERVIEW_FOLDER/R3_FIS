Map< user_id , last_visit_time > M ;







list<> f()
{

	Map< int , int > mp = new HashMap<>() ;
    ....

    Set< int > res ; 

    while( nextLine() )
    {
    	int time ;
    	int user_id ;


    	if( mp.get(user_id) == null )
    	{
    		// put inside 
    		mp.put( user_id , time );
    	}
    	else
    	{
    		int last_visit_time = mp.get(user_id);
    		// 
    		if( time - last_visit_time > 24 Hr )
    			res.add( user_id );

    	}
    }

}






