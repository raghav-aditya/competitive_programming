Semaphore f = new Semaphre(1);
Semaphore s = new Semaphore(0);

Thread1 
{
	for( int i = 0 ; i < N ; i += 2 )
	{
		f.accuire();
		print(2*i+1);
		s.release();
	}
}

Thread2
{
	for( int i = 0 ; i < N ; i += 2 )
	{
		s.accuire();
		print(2*i+2);
		f.release();
	}
}





